  <- ({v₁: rfoc A⁺}
       eta⁺ B⁺ ([v₂: rfoc B⁺] (↑R (⊗R v₁ v₂))) 
         (N₃ v₁: conc (B⁺ , ·) (↑ (A⁺ ⊗ B⁺))))
